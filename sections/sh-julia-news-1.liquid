{{"sectionhub-julia.scss.css" | asset_url | stylesheet_tag }}

<div id="sh-julia-{{ section.id }}" class="sh sh-julia-news-1 {% if section.settings.inverted %}sh-inverted{% endif %}" data-variant="{{section.settings.variant}}" style="{% unless section.settings.bg_color == blank %}background-color: {{ section.settings.bg_color }};{% endunless %} padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; {% unless section.settings.margin_top == blank %}margin-top: {{ section.settings.margin_top }}px;{% endunless %} {% unless section.settings.margin_bottom == blank %}margin-bottom: {{ section.settings.margin_bottom }}px;{% endunless %}">  
  {% if section.settings.bg_image != blank %}
  <div class="sh-overlay lazyload" data-bgset="{{section.settings.bg_image | img_url : '2000x' }}"></div>
  {% endif %}
  <div class="sh-container">
  {% unless section.settings.title == blank and section.settings.subtitle == blank %}
    <div class="sh-header">
      {% unless section.settings.title == blank %}
      <h2 class="sh-title">{{ section.settings.title | escape }}</h2>
      {% endunless %}
      {% unless section.settings.subtitle == blank %}
      <div class="sh-subtitle">{{ section.settings.subtitle | escape }}</div>
      {% endunless %}
    </div>
  {% endunless %}  
  {% assign blog = blogs[section.settings.blog] %}
  {% paginate blog.articles by section.settings.limit %}
  <div class="sh-grid" data-columns="{{section.settings.col_per_row}}" data-gap="{{section.settings.gap}}">
      {% for article in blog.articles %}
        <div class="sh-item">
          {% unless article.image == blank %}
            <div class="sh-media">
              <img class="sh-image lazyload" data-src="{{article.image | img_url : section.settings.image_size}}" alt="{{article.title}}">
            </div>
          {% endunless %}
          <div class="sh-data">
            <div class="sh-header">
              <div class="sh-extra">
                <div class="sh-date">
                  {{ article.published_at | time_tag: format: 'date' }}
              	</div>
                <div class="sh-tags">
                  {% for tag in article.tags %}
                      <a href="/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}">{{ tag }}</a>
                  {% endfor %}
              	</div>
              </div>
              <div class="sh-title">
                {{article.title}}
              </div>
              <div class="sh-meta">
              </div>
            </div>
            {% unless article.content == blank %}
            <div class="sh-content">
              {{ article.content | strip_html | truncatewords: section.settings.excerpt_words, section.settings.excerpt_ellipsis }}
            </div>
            {% endunless %}
            <div class="sh-footer">
              <a class="sh-button" href="{{article.url}}">
                <span class="sh-text">{{section.settings.read_more_string}}</span>
                <span class="sh-icon">{% include 'sh-julia-icon' with '003' %}</span>
              </a>
            </div>    
          </div>
        </div>
      {% endfor %}
  </div>
  {% if template.name == 'blog' and paginate.pages > 1 %}
  	{% include 'sh-julia-pagination' %}
  {% endif %}
  {% endpaginate %}
  </div>
</div>

