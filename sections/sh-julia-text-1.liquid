{{"sectionhub-julia.scss.css" | asset_url | stylesheet_tag }}

<div id="sh-julia-{{ section.id }}" class="sh sh-container sh-julia-text-1" style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;">  
  <div class="sh-grid" data-columns="{{section.settings.col_per_row}}" data-gap="{{section.settings.gap}}">
    {% for block in section.blocks %}  
    {% case block.type %}
	{% when 'text_item' %}
      <div class="sh-text-item">
        <div class="sh-data">
          {% unless block.settings.title == blank %}
          <div class="sh-header">
            <div class="sh-title">
              {{block.settings.title}}
            </div>
          </div>
          {% endunless %}
          {% unless block.settings.content == blank %}
          <div class="sh-content">
            {{block.settings.content}}
          </div>
          {% endunless %}
          <div class="sh-footer">
            {% unless block.settings.link == blank %}
            <a class="sh-button" href="{{block.settings.link}}">
              <span class="sh-text">{{block.settings.button_string}}</span>
              <span class="sh-icon">{% include 'sh-julia-icon' with '003' %}</span>
            </a>
            {% endunless %}
          </div>    
        </div>
      </div>
	{% endcase %}
    {% endfor %}
  </div>

</div>

{% schema %}
  {
    "name": "Text 1",
    "settings": [
	  {
        "type": "range",
        "id": "col_per_row",
        "label": "Col per row",
