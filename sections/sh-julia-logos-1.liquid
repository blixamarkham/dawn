{{"sectionhub-julia.scss.css" | asset_url | stylesheet_tag }}

<div id="sh-julia-{{ section.id }}" class="sh sh-container sh-julia-logos-1" style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;">    
  <div class="sh-row">
    {% for block in section.blocks %}  
      <div class="sh-item">
        <div class="sh-media">
          {% unless block.settings.link == blank %}
          	<a  href="{{block.settings.link}}">
          {% endunless %}
          <img class="sh-image" src="{{block.settings.image | img_url : section.settings.image_size}}">
          {% unless block.settings.link == blank %}
          	</a>
          {% endunless %}
        </div>
      </div>
    {% endfor %}
  </div>

</div>

{% schema %}
  {
    "name": "Logos 1",
    "settings": [
      {
         "type": "text",
         "id": "image_size",
         "label": "Image size",
         "default": "200x",
         "info": "Set the image size: '600x600',\n '2048x',\n'original' or '370x370_crop_center'"
      },
      {
        "type": "text",
        "id": "margin_top",
        "label": "Margin top (px)"
      },
      {
        "type": "text",
        "id": "margin_bottom",
        "label": "Margin bottom (px)"
      }
    ],
	"blocks": [
      {
        "type": "logo",
        "name": "Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
	],
    "presets": [{
      "name": "Logos 1",
      "category": "SectionHub: Julia"
    }]
  }
{% endschema %}
